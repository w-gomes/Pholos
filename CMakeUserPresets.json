{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja",
      "displayName": "Ninja Config",
      "description": "build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/src/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "msvc",
      "displayName": "MSVC",
      "description": "build using Microsoft Visual Studio generator",
      "generator": "Visual Studio 16 2019",
      "binaryDir": "${sourceDir}/build/msvc/",
      "inherits": "ninja"
    }
  ]
}
